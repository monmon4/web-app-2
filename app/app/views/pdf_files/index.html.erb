<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "Upload", new_pdf_file_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @pdf_file.each do |pdf_file| %>
      <tr>
        
        <td><%= link_to pdf_file.name, pdf_file_slides_path(pdf_file.id) %></td>
        
        <td><%= button_to "Delete",  pdf_file, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{pdf_file.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @pdf_file%>
