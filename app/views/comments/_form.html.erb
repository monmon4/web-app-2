<% if @slide != nil
	dest = [@slide.pdf_file, @slide, @slide.comments.new]
else if @pdf_file != nil
	dest = [@pdf_file, @pdf_file.comments.new]
end
end%>

<%=  form_for dest do |f| %>

	<div class="field">
		<%= f.label :comment%> <br>
		<%= f.text_area :comment%>
	</div>

	<div class="actions">
		<%= f.submit 'comment' %> 
	</div>
	<% end %>