
<br />
<%= link_to "Upload", new_pdf_file_path, class: "btn btn-primary" %>
<br />

<p>
  <strong>Title:</strong>
  <%= @slide.title %>
</p>



<p><%= image_tag("/assets/#{@slide.title}")%></p>


<%= link_to "previous", pdf_file_slide_path(@pdf_file, @slide.prev) %>
 
<%= link_to "next", pdf_file_slide_path(@pdf_file, @slide.next) %>


<p>
  <strong>Likes:</strong>
  <%= @slide.likes %>
  <% if current_user.slides.find_by(id: @slide.id)
  	link= "unlike"
  	else
  		link="like"
  		end %>
<%=link_to link, pdf_file_slide_path, method: :put %>
</p>


