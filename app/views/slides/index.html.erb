<p id="notice"><%= notice %></p>

<br />
<%= link_to "Upload", new_pdf_file_path, class: "btn btn-primary" %>
<br />

<h1>Listing Slides</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="1"></th>
      <th>Likes</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.title %></td>
        <td><%= image_tag("/assets/#{slide.title}", height: '32', width:'32')%></td>
        <td><%= slide.likes %></td>
        <td><%= link_to 'Show', pdf_file_slide_path(slide.pdf_file_id, slide.id) %></td>
        
        <div id="notes">
  <%= render @pdf_file.notes %>
</div>
<div>
  <%= form_for ([@pdf_file, @pdf_file.notes.new]) do |f| %>
  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note, size: "25x5" %>
  </div>
  <div class="actions">
    <%= f.submit "add new note" %>
  </div>
  <% end %>
</div>


        
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @slides%>
<br>


